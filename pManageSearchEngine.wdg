      CONSTANT
      	// Indexing
      	KEY_FORUM_INDEX     = "IDX_FORUM,"
      	KEY_INDEX_WIKI      = "IDX_WIKI,"
      	KEY_INDEX_BLOG      = "IDX_BLOGS,"
      	KEY_INDEX_POST      = "IDX_BLOGS_POSTS,"
      	KEY_INDEX_SHARES    = "IDX_SHARES,"
